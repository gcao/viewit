!!!
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{:content => "chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title= self["title"]
    %link{:href => "test_files/bundle_common.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "test_files/bundle_gist.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %script{:charset => "utf-8", :type => "text/javascript"}
      var GitHub = {}
    %script{:src => "test_files/jquery-1.js", :type => "text/javascript"}
    %script{:src => "test_files/bundle_common.js", :type => "text/javascript"}
    %script{:src => "test_files/bundle_gist.js", :type => "text/javascript"}
    %link{:href => "http://github.com/api/oembed?format=json&amp;url=http%3A%2F%2Fgist.github.com%2F566725", :rel => "alternate", :title => "gist: 566725", :type => "application/json+oembed"}/
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-3769691-4']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script');
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        ga.setAttribute('async', 'true');
        document.documentElement.firstChild.appendChild(ga);
      })();
        %script{:async => "true", :src => "test_files/ga.js"}
  %body.usingMouse
    #main
      #header
        .site
          .logo
            %a{:href => self["gist_homepage_url"]}
              %img{:alt => "gist", :src => "test_files/logo_gist.png"}/
          .userbox
            .avatarname
              %a{:href => self["logged_in_user"]["view_url"]}
                %img{:alt => "", :height => "20", :src => self["logged_in_user"]["logo_url"], :width => "20"}/
              %a.name{:href => self["logged_in_user"]["view_url"]}= self["logged_in_user"]["username"]
            %ul.usernav
              %li
                %a{:href => self["logged_in_user"]["dashboard_url"]}= self["logged_in_user"]
              %li
                %a{:href => self["logged_in_user"]["inbox_url"]}= self["messages"]["inbox_link_label"]
                %a.unread_count{:href => self["logged_in_user"]["inbox_url"]}= self["logged_in_user"]["message_count"]
              %li
                %a{:href => self["logged_in_user"]["view_url"]}= self["messages"]["messages_link_label"]
              %li
                %a{:href => self["logout_url"]}= self["messages"]["logout_link_label"]
          / /.userbox
          .topsearch
            %form#top_search_form{:action => self["gist_search_form"]["action"], :method => self["gist_search_form"]["method"]}
              %input.search.notnative.placeholder{:name => "q", :placeholder => self["messages"]["gist_search_input_floating_text"], :results => "5", :type => "search"}/
              %input.button{:type => "submit", :value => "Search"}/
              %input{:name => "page", :type => "hidden", :value => "1"}/
            %ul.nav
              %li
                %a{:href => self["gist_homepage_url"]}= self["messages"]["new_gist_link_label"]
              %li
                %a{:href => self["my_gists_url"]}= self["messages"]["my_gists_link_label"]
              %li
                %a{:href => self["starred_gists_url"]}= self["messages"]["starred_gists_link_label"]
              %li
                %a{:href => self["all_gists_url"]}= self["messages"]["all_gists_link_label"]
              %li
                %a{:href => self["homepage_url"]}= self["messages"]["back_to_github_link_label"]
          / /.topsearch
